[Global]
bios = bios/dcboot.rom
flash = bios/dcflash.rom
default path = disc
save path = save
bootstrap = bios/IP.BIN

[Controllers]
Device 0 = Sega Controller
  dpad left = Left
  dpad right = Right
  dpad up = Up
  dpad down = Down
  Start = KP_Enter, Return
  analog left = KP_Left
  analog right = KP_Right
  analog up = KP_Up
  analog down = KP_Down
  button X = A, a
  button Y = S, s
  button A = Z, z
  button B = X, x
  trigger left = D, d
  trigger right = C, c

